}

/* 问答专区 */
.qa-item {
    width: 100%;
    height: 700rpx;
    background-color: white;
    /* border: 2rpx solid black; 忘记示弱才会满身伤口*/
    margin-top: 5rpx;
    box-sizing: border-box;
    padding: 50rpx 50rpx;
}

.qa-item .list16-item_inner {
    width: 100%;
    height: 100%;
    /* border-bottom: 2rpx solid black; */
    /* background-color: rgb(44, 39, 39); */
}

.qa-item .list16-item_inner .user-info {
    display: flex;
}

.qa-item .list16-item_inner .user-info image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.qa-item .list16-item_inner .user-info view {
    font-size: 40rpx;
    line-height: 100rpx;
    margin-left: 30rpx;
}

.qa-item .list16-item_inner .content {
    height: 300rpx;

}

.qa-item .list16-item_inner .content .content-title {
    display: flex;
}

.qa-item .list16-item_inner .content .content-title .content-title-wen {
    width: 50rpx;
    height: 50rpx;
    border-radius: 10rpx;
    color: white;
    background-color: #4DA6FF;
    text-align: center;
    line-height: 50rpx;
    margin: 20rpx 10rpx;
}

.qa-item .list16-item_inner .content .content-title .content-title-zhen {
    margin: 20rpx 0;
    font-size: 35rpx;
    font-weight: 500;
}

.qa-item .list16-item_inner .content .content-text {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.qa-item .list16-item_inner .content .content-text view {
    width: 80%;
}

.qa-item .list16-item_inner .content .content-text image {
    width: 150rpx;
    height: 150rpx;
}

.qa-item .list16-item_inner .teacher-comment {
    height: 200rpx;
    background-color: #F7F7F7;
    /* border: 2rpx solid black; */
    border-radius: 10rpx;
    /* margin-top: 0rpx; */
}

.qa-item .list16-item_inner .teacher-comment .content-title {
    display: flex;
}

.qa-item .list16-item_inner .teacher-comment .content-title image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin: 20rpx 20rpx;
    /* padding: 20rpx 20rpx; */
}

.qa-item .list16-item_inner .teacher-comment .content-title .content-title-name {
    padding: 20rpx 0;
    line-height: 60rpx;
}

.qa-item .list16-item_inner .teacher-comment .content-title .content-title-caina {
    /* padding: 20rpx 5rpx; */
    width: 100rpx;
    height: 40rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 20rpx;
    background-color: #FFDB66;
    line-height: 40rpx;
    margin: 30rpx 20rpx;
}

.qa-item .list16-item_inner .teacher-comment .content-text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -moz-box;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal; 
}

