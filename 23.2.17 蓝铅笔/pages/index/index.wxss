}

/* 热门教程 */
.hot {
    width: 100%;
    /* height: 700rpx; */
    background-color: white;
    margin-top: 5rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}

.hot-box {
    width: 42%;
    /* height: 400rpx; */
    /* box-shadow: 0 0 10rpx 2rpx rgb(202, 198, 198); */
    border-radius: 20rpx;
}

.hot-image {
    width: 100%;
